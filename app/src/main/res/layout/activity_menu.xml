<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg_color"
    tools:context="com.air.monitor.MainActivity">


    <RelativeLayout
        android:id="@+id/rl_about"
        android:background="@drawable/selector_white_button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:hint="@string/menu_about"
            android:textColor="@color/item_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/arrow_right"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_network"
        android:background="@drawable/selector_white_button"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:hint="@string/menu_connect_network"
            android:textColor="@color/item_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/arrow_right"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_up_data"
        android:background="@drawable/selector_white_button"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:hint="@string/menu_up_data"
            android:textColor="@color/item_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/arrow_right"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_set_time"
        android:background="@drawable/selector_white_button"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:hint="@string/menu_set_time"
            android:textColor="@color/item_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/arrow_right"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_set_mark"
        android:background="@drawable/selector_white_button"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:hint="@string/menu_mark"
            android:textColor="@color/item_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/arrow_right"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
