<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg_color"
    tools:context="com.air.monitor.MainActivity">


    <RelativeLayout
        android:background="@color/white_light"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:text="@string/about_xinghao"
            android:textColor="@color/item_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_xinhao"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:text="x1001"
            android:textColor="@color/item_text_value_color"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white_light"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:hint="@string/about_ccrq"
            android:textColor="@color/item_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_ccrq"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:text="2018-12-21"
            android:textColor="@color/item_text_value_color"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:background="@color/white_light"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:text="@string/about_version"
            android:textColor="@color/item_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:text="2.1"
            android:textColor="@color/item_text_value_color"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white_light"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:hint="@string/about_count"
            android:textColor="@color/item_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_check_count"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:text="15"
            android:textColor="@color/item_text_value_color"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_check_update"
        android:background="@drawable/selector_white_button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:hint="@string/about_check_update"
            android:textColor="@color/item_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/arrow_right"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_reset"
        android:background="@drawable/selector_white_button"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">

        <TextView
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:hint="@string/about_reset"
            android:textColor="@color/item_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/arrow_right"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
